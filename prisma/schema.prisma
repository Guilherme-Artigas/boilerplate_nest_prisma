generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int               @id @default(autoincrement())
  name             String
  email            String            @unique
  document         String?           @unique @db.VarChar(18)
  phone            String?           @unique
  password         String
  code             String?           @db.VarChar(4)
  codeExpiresIn    DateTime?
  role             Role              @default(User)
  status           Status            @default(Pending)
  fileUrl          String?           @db.VarChar(1500)
  fileKey          String?           @db.VarChar(1500)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  adminPermissions AdminPermission[]
  files            File[]
  companies        Company[]         @relation("CompanyUsers")

  @@map("users")
}

model AdminPermission {
  id        Int              @id @default(autoincrement())
  name      AdminPermissions @unique()
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  admin     User[]

  @@map("admin_permissions")
}

model File {
  id        Int      @id @default(autoincrement())
  fileUrl   String?  @db.VarChar(1500)
  fileKey   String?  @db.VarChar(1500)
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("files")
}

model Text {
  id        Int      @id @default(autoincrement())
  type      TextType
  text      String   @db.LongText()
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("texts")
}

model Company {
  id        Int       @id             @default(autoincrement())
  name      String
  cnpj      String    @unique         @db.VarChar(18)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  products  Product[]
  users     User[]    @relation("CompanyUsers")

  @@map("companies")
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String?   @db.VarChar(500)
  price       Float
  stock       Int
  companyId   Int
  company     Company   @relation(fields: [companyId], references: [id])
  fileUrl     String?   @db.VarChar(1500)
  fileKey     String?   @db.VarChar(1500)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("products")
}

enum Role {
  Master
  Admin
  User
}

enum Status {
  Active
  Pending
  Inactive
}

enum AdminPermissions {
  Dashboard
  Settings
}

enum TextType {
  About
  Policies
  Terms
  Tips
  Cookies
}
